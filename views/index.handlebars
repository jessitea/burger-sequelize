

<div class="container" align="center">
<img src="/assets/img/burger.png" alt="burger" id="burgerPic">
<h1 class="text-center" id="title">eat-da-burger</h1>

<div class="row">
<div class="col-md-6" id="notEaten">
<h2 class="columnTitle">Ready to eat</h2>


<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li class="readyList">
        <span class="burgerName">{{this.id}}. {{this.burger_name}}</span>
       
        <form action="/{{this.id}}?_method=PUT" method="POST" class="listButton">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Nom!</button>
        </form>
     <li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col-md-6" id="eaten">
<h2 class="columnTitle">These were delicious!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li class="eatenList">
        {{this.burger_name}}

      </li>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

<div class="row">
<div class="col-md-12" id="addBurger">
<h2 class="columnTitle">Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
</div>